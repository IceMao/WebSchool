@model Photos
<form asp-action="EditPhotos" asp-controller="Admin" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <table>
        <tr>
            <th class="row-title">照片标题</th>
            <td><input type="text" name="Title" value="@Model.Title" /></td>
        </tr>
        <tr>
            <th class="row-title">照片路径</th>
            <td><input type="text" name="Content" value="@Model.Path" /></td>
        </tr>
        <tr>
            <th class="row-title">照片描述</th>
            <td><input type="text" name="Content" value="@Model.Discription" /></td>
        </tr>
        <tr>
            <th class="row-title">添加时间</th>
            <td><input type="datetime" name="Datatime" value="@Model.Datetime" /></td>
        </tr>
    </table>
    <p>
        <input type="submit" value="修改" />
        <a asp-action="Manage" asp-controller="Home">取消</a>
    </p>

</form>