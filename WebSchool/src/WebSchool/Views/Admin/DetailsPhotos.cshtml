@model IEnumerable<Photos>
<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>照片ID</th>
                <th>照片标题</th>
                <th>照片路径</th>
                <th>照片描述</th>
                <th>录入时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <th>@x.Id</th>
                    <th>@x.Title</th>
                    <th>@x.Path</th>
                    <th>@x.Discription</th>
                    <th>@x.Datetime</th>
                    @if (User.IsSignedIn())
                {
                        <th>
                            <a asp-action="EditPhotos" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                            <a href="javascript:remove(@x.Id)">删除</a>
                        </th>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
    @Html.MakePager("pager-item", "active", "pager")
    @if (User.IsSignedIn())
    {
        <form id="frmDelete" asp-aciton="DeletePhotos" asp-controller="Admin" method="post">
            <input type="hidden" id="Id" name="id" />
        </form>
        <script>
            function remove(id) {
                var jug = confirm("确认删除？");
                if (jug == true) {
                    $('#Id').val(id);
                    $('#frmDelete').submit();
                }
            }
        </script>
    }
