<form role="form" asp-action="CreateNews" asp-controller="Admin" method="post">
    <div class="form-group">
        <h2>添加新闻</h2>
        <table class="table">
            <tr>
                <th>新闻标题</th>
                <td><input class="form-control" type="text" name="Title" /></td>
            </tr>
            <tr>
                <th>新闻内容</th>
                <td><textarea class="form-control" name="Content"></textarea></td>
            </tr>
            <tr>
                <th>新闻来源</th>
                <td>
                    <select name="Source">
                        <option>请选择</option>
                        <option>原创</option>
                        <option>凤凰网</option>
                        <option>人民网</option>
                        <option>其他途径</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>添加时间</th>
                <td><input class="form-control" type="datetime-local" name="Datatime" /></td>
            </tr>

        </table>
        <p>
            <input class="btn" type="submit" value="提交" />
            <a asp-action="Index" asp-controller="Home">取消</a>
        </p>
</div>
</form>
