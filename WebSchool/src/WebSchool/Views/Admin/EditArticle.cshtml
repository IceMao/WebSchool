@model Article
<form asp-action="EditNews" asp-controller="Admin" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <table>
        <tr>
            <th class="row-title">新闻标题</th>
            <td><input type="text" name="Title" value="@Model.Title" /></td>
        </tr>
        <tr>
            <th class="row-title">新闻内容</th>
            <td><input type="text" name="Content" value="@Model.Content" /></td>
        </tr>
        <tr>
            <th class="row-title">新闻来源</th>
            <td>
                <select name="Source" value="@Model.Source">
                    <option>人民网</option>
                    <option>凤凰网</option>
                    <option>其他途径</option>
                </select>
            </td>
        </tr>
        <tr>
            <th class="row-title">文章类别</th>
            <td>
                <select name="Source" value="@Model.Category">
                    <option>科学</option>
                    <option>童话</option>
                    <option>自然</option>
                    <option>生物</option>
                </select>
            </td>
        </tr>
        <tr>
            <th class="row-title">添加时间</th>
            <td><input type="datetime" name="Datatime" value="@Model.Datatime" /></td>
        </tr>
    </table>
    <p>
        <input type="submit" value="修改" />
        <a asp-action="Manage" asp-controller="Home">取消</a>
    </p>

</form>