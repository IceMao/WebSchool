@{
    ViewBag.Title = "修改密码";
}
<h2>@ViewBag.Title</h2>
<form asp-action="Modify" asp-controller="Account" method="post">
    <table>
        <tr>
            <td class="row-title">旧密码</td>
            <td><input type="password" name="currentpwd" /></td>
        </tr>
        <tr>
            <td class="row-title">新密码</td>
            <td><input type="password" name="newpwd" /></td>
        </tr>
        <tr>
            <td class="row-title">再次输入新密码</td>
            <td><input type="password" name="confirmpwd" /></td>
        </tr>
    </table>
    <p>
        <input type="submit" class="" value="提交" />
        <a asp-action="Index" asp-controller="Home">取消</a>
    </p>
</form>