@model Photos
<form role="form" asp-action="EditPhotos" asp-controller="Admin" method="post">
    <div class="form-group">
        <input type="hidden" name="id" value="@Model.Id" />
        <table class="table">
            <tr>
                <th>照片标题</th>
                <td><input type="text" name="Title" value="@Model.Title" /></td>
            </tr>
            <tr>
                <th>照片路径</th>
                <td><input id="fileElem" multiple accept="image/*" onchange="handleFiles(this)" type="file" name="Path"/>
                    <div id="fileList" style="width:200px; height:200px;"></div>
                </td>
            </tr>
            <tr>
                <th>照片描述</th>
                <td><textarea class="form-control" rows="3" name="Description">@Model.Description</textarea></td>
            </tr>
            <tr>
                <th>添加时间</th>
                <td><input class="form-control" type="datetime" name="Datetime" value="@DateTime.Now" /></td>
            </tr>
        </table>
        <p>
            <input type="submit" value="修改" />
            <a asp-action="Manage" asp-controller="Home">取消</a>
        </p>
        </div>
</form>
<script>
	window.URL = window.URL || window.webkitURL;
	var fileElem = document.getElementById("fileElem"),
	    fileList = document.getElementById("fileList");
	function handleFiles(obj) {
		var files = obj.files,
			img = new Image();
		if(window.URL){
			//File API
			  alert(files[0].name + "," + files[0].size + " bytes");
		      img.src = window.URL.createObjectURL(files[0]); //创建一个object URL，并不是你的本地路径
		      img.width = 200;
		      fileList.innerHTML = '';
		      //img.onload = function(e) {
		      //	//
		      //   window.URL.revokeObjectURL(this.src); //图片加载后，释放object URL
		      //}
		      fileList.appendChild(img);
		}else if(window.FileReader){
			//opera不支持createObjectURL/revokeObjectURL方法。我们用FileReader对象来处理
			var reader = new FileReader();
			reader.readAsDataURL(files[0]);
			reader.onload = function(e){
				fileList.innerHTML = '';
				alert(files[0].name + "," +e.total + " bytes");
				img.src = this.result;
				img.width = 200;
				fileList.appendChild(img);
			}
		}else{
			//ie
			obj.select();
			obj.blur();
			var nfile = document.selection.createRange().text;
			document.selection.empty();
			img.src = nfile;
			img.width = 200;
			img.onload=function(){
				// fileList.innerHTML = '';
		      alert(nfile+","+img.fileSize + " bytes");
		    }
			fileList.appendChild(img);
			//fileList.style.filter="progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='image',src='"+nfile+"')";
		}
	}
</script>