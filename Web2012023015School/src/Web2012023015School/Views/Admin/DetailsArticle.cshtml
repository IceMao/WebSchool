@model IEnumerable<Article>
<div class="container">
<table class="table table-hover">
    <thead>
        <tr>
            <th>文章ID</th>
            <th>文章标题</th>
            <th>文章作者</th>
            <th>文章来源</th>
            <th>文章类别</th>
            <th>录入时间</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <th>@x.Id</th>
                <th>@x.Title</th>
                <th>@x.Author</th>
                <th>@x.Source</th>
                <th>@x.Category</th>
                <th>@x.Datatime</th>
                
                @if (User.IsSignedIn())
                {
                    <th>
                        <a asp-action="EditArticle" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                        @*<a href="javascript:remove(@x.Id)">删除</a>*@
                        <a asp-action="DeleteArticle" asp-controller="Admin" asp-route-id="@x.Id">删除</a>
                    </th>
                }
            </tr>
        }
        </tbody>
    </table>
    </div>
    @Html.MakePager("pager-item", "active", "pager")
