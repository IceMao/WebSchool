@model IEnumerable<Activities>
    <a asp-action="CreateActivities" asp-controller="Admin"><h5 style="margin-top:10px;" >快速添加课余活动</h5></a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>活动ID</th>
                <th>活动标题</th>
                <th>活动地点</th>
                <th>录入时间</th>
                <th>优先级</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <th>@x.Id</th>
                    <th>@x.Title</th>
                    <th>@x.Address</th>
                    <th>@x.Datatime</th>
                    <th>@x.Priority</th>

                    @if (User.IsSignedIn())
                {
                        <th>
                            <a asp-action="EditActivities" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                            @*<a href="javascript:remove(@x.Id)">删除</a>*@
                            <a asp-action="DeleteActivities" asp-controller="Admin" asp-route-id="@x.Id">删除</a>
                        </th>
                    }
                </tr>
            }
        </tbody>
    </table>

@Html.MakePager("pager-item", "active", "pager")