@{
    Layout = "~/Views/Shared/_Display.cshtml";
}
<link rel="stylesheet" href="~/styles/new.css" />
@model RecruitStudents
<div class="recruit">
    <div style="height:20px;color:#eee;margin-top:-20px;"></div>
    <div class="container">
        <div class="col-md-8 page-content" style="box-shadow:3px 3px 3px #ccc;">
            <div class="panel-heading">
                <h3 style="text-align:center;">@Model.Title</h3>
                <p class="text-muted"><small>发布时间：@Model.Datatime</small> &nbsp;&nbsp;&nbsp;<small class="pull-right">浏览量：<span>9999+</span></small></p>
            </div>
            <div class="panel-body">
                <p>@Model.Content</p>
            </div>
        </div>

        <div class="col-md-4" style="margin-top:10px;">
            <div class="panel panel-default" style="box-shadow:3px 3px 3px 8px #cfc;">
                <div class="panel-heading" style="background-color:rgb(250,96,96);">
                    <h3 class="panel-title" style="color:rgb(255,255,255);">其它招生信息</h3>
                </div>
                @foreach (RecruitStudents others in ViewBag.others)
            {
                    <div class="panel-body">
                        <a asp-action="RecruitStudents" asp-controller="Show" asp-route-id="@others.Id" style="text-decoration:none;">@others.Title</a><small class="pull-right text-muted"></small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
