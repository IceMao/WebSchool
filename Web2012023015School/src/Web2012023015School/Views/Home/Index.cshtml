@{
    Layout = null;
    ViewBag.Title = "首页";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>贵港市达开实验小学-@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="~/styles/bootstrap.min.css" rel="stylesheet">
    <link href="~/styles/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="~/styles/carousel.css" rel="stylesheet">
    <link href="~/styles/site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/school.ico" />
    <link rel="stylesheet" href="~/styles/indexStyle.css" /><!--Style-->
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/ie-emulation-modes-warning.js"></script>
    <script src="~/scripts/holder.min.js"></script>
    <script src="~/scripts/ie10-viewport-bug-workaround.js"></script>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->

</head>
<body>
    <div>
        <a style="width: 100%; height: 100px;background: url('../images/hb.jpg') top no-repeat;display:block" asp-action="Index" asp-controller="Home" title="达开实验小学">
            <!--<img src="~/images/logo.jpg" alt="贵港市达开实验小学" style="width:63px; height:63px; margin-top:5px; " />-->
            <!--<img src="~/images/SchoolName.png" alt="达开实验小学" style="width:300px; height:50px;  margin-top:5px; " />-->
        </a>
        <!--header end-->
        <div class="container">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar" style="background-color:#fcc;"></span>
                <span class="icon-bar" style="background-color:#fcc;"></span>
                <span class="icon-bar" style="background-color:#fcc;"></span>
            </button>
            <!--button end-->
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-center">
                    <li><a asp-action="Index" asp-controller="Home">首页</a></li>
                    <li><a asp-action="Details" asp-controller="Home">学校概况</a></li>
                    <li><a asp-action="Photos" asp-controller="Page">校园风光</a></li>
                    <li><a asp-action="News" asp-controller="Page">校园新闻</a></li>
                    <li><a asp-action="Article" asp-controller="Page">师生文章</a></li>
                    <li><a asp-action="RecruitStudents" asp-controller="Page">招生信息</a></li>
                    <li><a asp-action="Inform" asp-controller="Page">通知公告</a></li>
                    <li><a asp-action="CEmail" asp-controller="Page">校长信箱</a></li>
                    <li><a asp-action="Activities" asp-controller="Page">课余活动</a></li>
                    <li><a asp-action="Message" asp-controller="Page">留言版</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">友情链接 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="http://ggdksy.ggedu.gov.cn" target="_blank">达开初中</a></li>
                            <li><a href="http://ggdkgz.ggedu.gov.cn" target="_blank">达开高中</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">著名高校</li>
                            <li><a href="http://www.tsinghua.edu.cn" target="_blank">清华大学</a></li>
                            <li><a href="http://www.pku.edu.cn" target="_blank">北京大学</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!--nav end-->
            <div style="margin-top:0; margin-bottom:30px;" id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/door.jpg" />
                    </div>
                    <div class="item">
                        <img src="~/images/bookbar.jpg" />
                    </div>
                    <div class="item">
                        <img src="~/images/newyear.jpg" />
                    </div>
                    <div class="item">
                        <img src="~/images/playground.jpg" />
                    </div>
                    <div class="item">
                        <img src="~/images/department1.jpg" />
                    </div>
                </div>
                <a href="#myCarousel" data-slide="prev" class="carousel-control left"></a>
                <a href="#myCarousel" data-slide="next" class="carousel-control right"></a>
            </div>
            <!-- carousel end-->
            <div class="row i-content">
                <div class="col-md-8">
                    <div class="col-md-12" style="background:rgba(191, 178, 178, 0.11);">
                        <h3 style="font-weight:600;"><a asp-action="News" asp-controller="Page" style="color:#000;">最新新闻<em><small>Campus News</small></em></a></h3>
                        <div style="margin-bottom:25px; margin-top:10px;">
                            @foreach (News x in ViewBag.news)
                            {
                                <div style="padding:5px;">
                                    <a asp-action="News" asp-controller="Show" asp-route-id="@x.Id" style="font-size:15px; color:#000;">@x.Title</a><small class="pull-right" style="color:#a5a5a5; font-size:14px;">@x.Datatime</small>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-12 i-content-left left1">
                        <div class="col-md-8" style="background-color:#fff;box-shadow:3px 3px 3px 3px #2e31dc;">
                            <div class="container-fluid">
                                <div class="col-md-12 i-content-info">
                                    <a class="info-title1" asp-action="Article" asp-controller="Page"><h3 class="text-center" style="">师生文章</h3></a>
                                    @foreach (Article x in ViewBag.article)
                                    {
                                        <p style="padding:3px;"><a asp-action="Article" asp-controller="Show" asp-route-id="@x.Id" style="color:#000;">@x.Title</a><i><small class="pull-right" style="color:#a5a5a5; font-size:13px;">@x.Author</small></i></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 i-content-left left2">
                        <div class="col-md-8" style="background-color:#fff;box-shadow:3px 3px 3px 3px #69e679;">
                            <div class="container-fluid i-content-info">
                                <div class="col-md-12">
                                    <a class="info-title2" asp-action="Activities" asp-controller="Page"><h3 class="text-center">课余活动</h3></a>
                                    @foreach (Activities x in ViewBag.activities)
                                    {
                                        <p style="padding:3px;"><a asp-action="Activities" asp-controller="Show" asp-route-id="@x.Id" style="color:#000;">@x.Title</a></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 i-content-left left3">
                        <div class="col-md-8" style="background-color:#fff;box-shadow:3px 3px 3px 3px #ef1e17;">
                            <div class="container-fluid i-content-info">
                                <div class="col-md-12">
                                    <a class="info-title3" asp-action="RecruitStudents" asp-controller="Page"><h3 class="text-center">招生信息</h3></a>
                                    @foreach (RecruitStudents x in ViewBag.recruit)
                                    {
                                        <p class="text-center" style="padding:3px;"><a asp-action="RecruitStudents" asp-controller="Show" asp-route-id="@x.Id" style="color:#000;">@x.Title</a></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="col-md-12">
                        <div class="panel" style="box-shadow:none;">
                            <div>
                                <h3 style="font-weight:600; background-color:antiquewhite; padding:5px;"><a asp-action="News" asp-controller="Page" style="color:#490d0d;">近期活动<em><small>Recent Activity</small></em></a></h3>
                            </div>
                            <div class="thumbnail" style="margin-top:10px;">
                                <a href="#"><img src="~/images/door3.jpg" alt="图片加载失败..." /></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="panel" style="box-shadow:none;">
                            <div>
                                <h3 style="font-weight:600; background-color:aquamarine; padding:5px;"><a asp-action="Inform" asp-controller="Page" style="color:#09230d;">通知公告<em><small>Announcement</small></em></a></h3>
                            </div>
                            @foreach (Inform x in ViewBag.info)
                            {
                                <div style="padding:10px;">
                                    <span style="font-weight:600; padding-right:10px;">&gt;</span><a style="color:#000; font-weight:400;" asp-action="News" asp-controller="Show" asp-route-id="@x.Id">@x.Title</a>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
            <!--content end-->            
        </div>      
        <div class="col-md-12">
            <footer class="text-center">
                <div style="line-height:80px; display:inline-block;">&copy; 2016 IceMao. &middot;<a asp-action="Login" asp-controller="Account">后台登陆管理</a></div>
            </footer>
        </div>
        <!--footer end-->
    </div>
