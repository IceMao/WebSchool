@{ 
    Layout = null;
    ViewBag.Title = "首页";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <title>贵港市达开实验小学-@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="~/styles/bootstrap.min.css" rel="stylesheet">
    <link href="~/styles/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="~/styles/carousel.css" rel="stylesheet">
    <link href="~/styles/site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/school.ico" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/ie-emulation-modes-warning.js"></script>
    <script src="~/scripts/holder.min.js"></script>
    <script src="~/scripts/ie10-viewport-bug-workaround.js"></script>

    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->
    
    <style type="text/css">
        .headbanner {
            width: 100%;
            height: 100px;
            background: url("../images/hb.jpg") top no-repeat;
        }
        #navbar li:hover{
            background-color:rgb(220,50,50);
        }
    </style>
</head>
<body style="background-color:#cfc;">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color:rgba(18,180,90,0.8);">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar" style="background-color:#fcc;"></span>
                            <span class="icon-bar" style="background-color:#fcc;"></span>
                            <span class="icon-bar" style="background-color:#fcc;"></span>
                        </button>
                        <a class="navbar-brand logo" asp-action="Index" asp-controller="Home" title="达开实验小学"><img src="~/images/logo.jpg" alt="贵港市达开实验小学"/></a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav text-center">
                            <li><a style="color:#fff;" asp-action="Index" asp-controller="Home">首页</a></li>
                            <li><a style="color:#fff;" asp-action="Details" asp-controller="Home">学校概况</a></li>
                            <li><a style="color:#fff;" asp-action="Photos" asp-controller="Page">校园风光</a></li>
                            <li><a style="color:#fff;" asp-action="News" asp-controller="Page">校园新闻</a></li>
                            <li><a style="color:#fff;" asp-action="Article" asp-controller="Page">师生文章</a></li>
                            <li><a style="color:#fff;" asp-action="RecruitStudents" asp-controller="Page">招生信息</a></li>
                            <li><a style="color:#fff;" asp-action="Inform" asp-controller="Page">通知公告</a></li>
                            <li><a style="color:#fff;" asp-action="CEmail" asp-controller="Page">校长信箱</a></li>
                            <li><a style="color:#fff;" asp-action="Activities" asp-controller="Page">课余活动</a></li>
                            <li><a style="color:#fff;" asp-action="Message" asp-controller="Page">留言版</a></li>
                            <li class="dropdown">
                                <a style="color:#fff;" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">友情链接 <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="http://ggdksy.ggedu.gov.cn" target="_blank">达开初中</a></li>
                                    <li><a href="http://ggdkgz.ggedu.gov.cn" target="_blank">达开高中</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header">著名高校</li>
                                    <li><a href="http://www.tsinghua.edu.cn" target="_blank">清华大学</a></li>
                                    <li><a href="http://www.pku.edu.cn" target="_blank">北京大学</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/door.jpg" class="img-responsive" alt="加载失败"/>
            </div>
            <div class="item">
                <img src="~/images/bookbar.jpg" class="img-responsive" alt="加载失败"/>
            </div>
            <div class="item">
                <img src="~/images/newyear.jpg" class="img-responsive" alt="加载失败"/>
            </div>
            <div class="item">
                <img src="~/images/playground.jpg" class="img-responsive" alt="加载失败"/>
            </div>         
            <div class="item">
                <img src="~/images/department1.jpg" class="img-responsive" alt="加载失败"/>
            </div>            
        </div>
        <a href="#myCarousel" data-slide="prev" class="carousel-control left">&lsaquo;</a>
        <a href="#myCarousel" data-slide="next" class="carousel-control right">&rsaquo;</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="background-color:rgb(18,180,90);">
                        <a href="#" style="color:#fff;">近期活动</a>
                    </div>
                    <div class="thumbnail">
                        <a href="#"><img src="~/images/door1.jpg" /></a>
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="background-color:rgb(18,180,90);">
                        <a asp-action="News" asp-controller="Page" style="color:#fff;">最新新闻</a>
                    </div>
                    @foreach (News x in ViewBag.news)
                    {
                        <div class="panel-body">
                            <a asp-action="News" asp-controller="Show" asp-route-id="@x.Id" style="color:#000000;">@x.Title</a><small class="pull-right">@x.Datatime</small>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="background-color:rgb(18,180,90)">
                        <a asp-action="Inform" asp-controller="Page" style="color:#fff;">最新通知</a>
                    </div>
                    @foreach (Inform x in ViewBag.info)
                    {
                        <div class="panel-body">
                            <a asp-action="News" asp-controller="Show" asp-route-id="@x.Id" style="color:#000000;">@x.Title</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12"  style="margin-bottom:20px;">
        <div class="container">
            <div class="row">
                <div class="col-md-4" style="background-color:#fff;box-shadow:3px 3px 3px 3px #fcc;">
                    <div class="container-fluid">
                        <div class="col-md-12">
                            <a asp-action="Activities" asp-controller="Page"><h4 class="text-center" style="background-color:rgb(18,180,90);padding:2px;box-shadow:3px 3px 3px 3px #fcc;color:#fff;">最新活动</h4></a>
                            @foreach (Activities x in ViewBag.activities)
                            {
                                <p><a asp-action="Activities" asp-controller="Show" asp-route-id="@x.Id" style="color:#000000;">@x.Title</a></p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4" style="background-color:#fff;box-shadow:3px 3px 3px 3px #fcc;">
                    <div class="container-fluid">
                        <div class="col-md-12">
                            <a asp-action="Article" asp-controller="Page"><h4 class="text-center" style="background-color:rgb(18,180,90);padding:2px;box-shadow:3px 3px 3px 3px #fcc;color:#fff;">最新文章</h4></a>
                            @foreach (Article x in ViewBag.article)
                            {
                                <p><a asp-action="Article" asp-controller="Show" asp-route-id="@x.Id" style="color:#000000;">@x.Title</a><small class="pull-right text-muted">@x.Author</small></p>
                            }
                        </div>
                        </div>
                    </div>
                <div class="col-md-4" style="background-color:#fff;box-shadow:3px 3px 3px 3px #fcc;">
                    <div class="container-fluid">
                        <div class="col-md-12">
                            <a asp-action="RecruitStudents" asp-controller="Page"><h4 class="text-center" style="background-color:rgb(18,180,90);padding:2px;box-shadow:3px 3px 3px 3px #fcc;color:#fff;">最新招生信息</h4></a>
                            @foreach (RecruitStudents x in ViewBag.recruit)
                            {
                                <p><a asp-action="RecruitStudents" asp-controller="Show" asp-route-id="@x.Id" style="color:#000000;">@x.Title</a></p>

                            }
                        </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
        
        
    <div class="col-md-12">
        <footer class="text-center" style="background-color:rgb(18,180,90);height:50px;">
            <div style="line-height:50px;">&copy;CopyRight By 2012023015.&middot;<a asp-action="Login" asp-controller="Account">后台登陆管理</a></div>
        </footer>
    </div>
   <script type="text/javascript">
       $(function () {
           $('#myCarousel').carousel({
               interval:2000,
       });
       $('carousel-control').css('line-height',$('.carousel-inner img').height()+'px');
       $(window).resize(function () {
           var $height = $('.carousel-inner img').eq(0).height() ||
                         $('.carousel-inner img').eq(1).height() ||
                         $('.carousel-inner img').eq(2).height();
           $('carousel-control').css('line-height', $height + 'px');
       });
       });
   </script>
</body>
</html>


